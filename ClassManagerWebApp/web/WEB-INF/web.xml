<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>computerName</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.FindStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RemoveStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.EditStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllStudentsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetAllStudentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/AddStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindStudentServlet</servlet-name>
        <url-pattern>/FindStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveStudentServlet</servlet-name>
        <url-pattern>/RemoveStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditStudentServlet</servlet-name>
        <url-pattern>/EditStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllStudentsServlet</servlet-name>
        <url-pattern>/GetAllStudentsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/forbidden.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>TeacherConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>TeacherResource</web-resource-name>
            <description/>
            <url-pattern>/addStudent.html</url-pattern>
            <url-pattern>/editStudent.html</url-pattern>
            <url-pattern>/findStudent.html</url-pattern>
            <url-pattern>/removeStudent.html</url-pattern>
            <url-pattern>/getAllStudents.html</url-pattern>
            <url-pattern>/AddStudentServlet.do</url-pattern>
            <url-pattern>/EditStudentServlet.do</url-pattern>
            <url-pattern>/FindStudentServlet.do</url-pattern>
            <url-pattern>/RemoveStudentServlet.do</url-pattern>
            <url-pattern>/GetAllStudentsServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>teacher</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>StudentConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>StudentResources</web-resource-name>
            <description/>
            <url-pattern>/getAllStudents.html</url-pattern>
            <url-pattern>/GetAllStudentsServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>student</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>teacher</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>student</role-name>
    </security-role>
</web-app>
