<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>computerName</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>ac.za.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ac.za.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMessageServlet</servlet-name>
        <servlet-class>ac.za.tut.web.AddMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllMsgsServlet</servlet-name>
        <servlet-class>ac.za.tut.web.ViewAllMsgsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewLongestMsgServlet</servlet-name>
        <servlet-class>ac.za.tut.web.ViewLongestMsgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMessageServlet</servlet-name>
        <url-pattern>/AddMessageServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllMsgsServlet</servlet-name>
        <url-pattern>/ViewAllMsgsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewLongestMsgServlet</servlet-name>
        <url-pattern>/ViewLongestMsgServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/forbidden.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>StudentConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>StudentResources</web-resource-name>
            <description/>
            <url-pattern>/enter_message.jsp</url-pattern>
            <url-pattern>/AddMessageServlet.do./enter_message_outcome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>student</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>TeacherConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>TeacherResources</web-resource-name>
            <description/>
            <url-pattern>/ViewAllMsgsServlet.do</url-pattern>
            <url-pattern>/view_all_msgs_outcome.jsp</url-pattern>
            <url-pattern>/ViewLongestMsgServlet.do</url-pattern>
            <url-pattern>/longest_msg_outcome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>teacher</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/Login.jsp</form-login-page>
            <form-error-page>/Login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>student</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>teacher</role-name>
    </security-role>
</web-app>
