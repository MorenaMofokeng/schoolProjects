<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>computerName</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMessageServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewLongestMessageServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewLongestMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMessageServlet</servlet-name>
        <url-pattern>/AddMessageServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllServlet</servlet-name>
        <url-pattern>/ViewAllServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewLongestMessageServlet</servlet-name>
        <url-pattern>/ViewLongestMessageServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/forbidden.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>FieldAgentConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>FieldAgentResources</web-resource-name>
            <description/>
            <url-pattern>/enter_message.jsp</url-pattern>
            <url-pattern>/AddMessageServlet.do</url-pattern>
            <url-pattern>/enter_message_outcome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>field_agent</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AgentManagerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AgentManagerResources</web-resource-name>
            <description/>
            <url-pattern>/ViewAllServlet.do</url-pattern>
            <url-pattern>/ViewLongestMessageServlet.do</url-pattern>
            <url-pattern>/view_all_outcome.jsp</url-pattern>
            <url-pattern>/view_longest_msg_outcome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>agent_manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>field_agent</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>agent_manager</role-name>
    </security-role>
</web-app>
