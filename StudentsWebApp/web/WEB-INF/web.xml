<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddRecordServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddRecordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllRecordsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetAllRecordsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStudentsWhoPassedServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetStudentsWhoPassedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStudentsWhoFailed</servlet-name>
        <servlet-class>za.ac.tut.web.GetStudentsWhoFailed</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDetailsOverMarkRangeServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetDetailsOverMarkRangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRecordServlet</servlet-name>
        <url-pattern>/AddRecordServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllRecordsServlet</servlet-name>
        <url-pattern>/GetAllRecordsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStudentsWhoPassedServlet</servlet-name>
        <url-pattern>/GetStudentsWhoPassedServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStudentsWhoFailed</servlet-name>
        <url-pattern>/GetStudentsWhoFailed.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDetailsOverMarkRangeServlet</servlet-name>
        <url-pattern>/GetDetailsOverMarkRangeServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
